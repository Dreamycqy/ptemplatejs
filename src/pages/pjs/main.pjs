	}
	.main{
		.divself{
			padding: 0.3864rem;
			background-color: rgb(255,0,255);
			a{
				background-color: rgb(255,255,255);
				display:block;
			}
		}
		.newlist{
			margin:0.3864rem;
			line-height:0.7728rem;
			a{
				font-size:0.7728rem;
				display:block;
			}
			span{
				font-size:0.4637rem;
			}
		}
		.article{
			margin: 0.3864rem;
			h1{
				font-size:0.7728rem;
			}
			.desc{
				font-size:0.5410rem;
				margin:0.3864rem 0;
			}
			.content{
				font-size:0.7728rem;
				line-height:1.3524rem;
			}
			.source{
				font-size:0.4637rem;
			}
		}
		.reg{
			margin: 0.3864rem;
			.title{
				font-size: 0.7728rem;
